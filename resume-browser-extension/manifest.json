{
    "manifest_version": 3,
    "name": "Job Posting Extractor",
    "version": "1.0",
    "description": "Extracts job postings by selecting blocks on a webpage.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "overlay.css"
            ]
        }
    ]
}